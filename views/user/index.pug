extend ../layout/common

block content
    h1 User List 
        a.btn.btn-primary(href="/users/create") New
    .d-flex.align-items-center
        form(action="/users/search" method="GET" class="d-flex ml-auto")
            input(type="text" id='input' name="q" value= input class="form-control")
            button(type='submit' class="btn btn-primary ml-2") Submit
    table.table
        tr
            th Avatar
            th Name 
            th Phone 
            th Action 

        each user in users
            tr 
                td
                    if user.avatar
                        img.avatar(src=user.avatar)
                    else
                        img.avatar(src='https://www.w3schools.com/howto/img_avatar.png')
                td= user.name 
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" +user.id) View
