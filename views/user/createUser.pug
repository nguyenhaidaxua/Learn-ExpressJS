extend ../layout/common
block content
    h1 Create User 
    if errors
        each error of errors
            .alert.alert-danger= error
    form(action="/users/create" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Name 
            input.form-control(type="text" id='name' name="name" value=values ? values.name : ""  )
     
        .form-group
            label(for="phone") Phone 
            input.form-control(type="text" id='phone' name="phone" value=values ? values.phone : ""  )
       
        .form-group
            label(for="avatar") Avatar 
            br
            input.form-control-file(type="file" name="avatar")
        button.btn.btn-primary.mt-2(type='submit') Create

