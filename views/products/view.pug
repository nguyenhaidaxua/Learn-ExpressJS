        each product in products 
            .card.mt-5(style='width: 18rem;')
                img.card-img-top(src=product.img alt='...')
                .card-body
                    h5.card-title= product.name
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') Add to Cart

    
