extend ../layout/common
block content
    h1 Products List
    .d-flex.justify-content-center
        ul.pagination
            li.page-item
                a.page-link(href=`products?page=${Number(currentPage) - 1}`) Previous
            li.page-item
                a.page-link(href=`products?page=${Number(currentPage) == 1 ? 1 : Number(currentPage) > Number(pages) - 1 ? Number(pages) - 2 : Number(currentPage) -1}`)= Number(currentPage) == 1 ? 1 : Number(currentPage) > Number(pages) - 1 ? Number(pages) - 2 : Number(currentPage) -1
